{% extends "base.jinja" %}

{% block title %}choreworld, Wellington{% endblock title %}

{% block extrahead %}
    <link rel="stylesheet" type="text/css" href="{{ url_path('static/welly.css') }}">
{% endblock extrahead %}

{% block body %}

<main>

<h1>Welcome to choreworld (Wellington edition)</h1>

<h2>Chores for week ending <span id="week-end">{{ current_weekend_date }}</span></h2>

{% import 'macros.jinja' as macros %}
{% set chores %}
    {% for chore, person in choregroups['main'].items() %}
        {{ macros.chore(chore.id, chore.name, person) }}
    {% endfor %}
    {{ macros.chore('kitchen', 'Kitchen', 'Alice') }}
{% endset %}
{{ macros.chorelist('chores', chores) }}
</main>

<footer>
<p><a href="https://github.com/choreworld/choreworld.github.io/issues">Feedback</a></p>
<p>choreworld v0.2 &copy; choreworld 2023</p>
</footer>

{% endblock body %}
